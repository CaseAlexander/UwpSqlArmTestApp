<Page
    x:Class="SqlTester.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SqlTester"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="800">
            <TextBlock 
                x:Name="TitleText" 
                Text="SQL Performance Test" 
                FontSize="32" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,20"/>
            
            <TextBlock 
                x:Name="StatusText" 
                Text="Initializing..." 
                FontSize="20" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,20"/>
            
            <ProgressBar 
                x:Name="ProgressBar" 
                IsIndeterminate="True" 
                Width="400" 
                Margin="0,0,0,30"/>
            
            <ScrollViewer 
                x:Name="ResultsScrollViewer" 
                Height="400" 
                VerticalScrollBarVisibility="Auto"
                BorderBrush="Gray" 
                BorderThickness="1" 
                Padding="10"
                Visibility="Collapsed">
                <TextBlock 
                    x:Name="ResultsText" 
                    TextWrapping="Wrap" 
                    FontFamily="Consolas" 
                    FontSize="14"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>